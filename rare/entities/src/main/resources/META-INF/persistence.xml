<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="rare">
		<provider>com.impetus.kundera.KunderaPersistence</provider>
		<class>com.rare.entities.entity.Authentication</class>
		<class>com.rare.entities.entity.Location</class>
		<class>com.rare.entities.entity.Metric</class>
		<class>com.rare.entities.entity.Person</class>
		<class>com.rare.entities.entity.Rating</class>
		<class>com.rare.entities.entity.Service</class>
		<class>com.rare.entities.entity.ServiceCategory</class>
		<class>com.rare.entities.entity.SocialNetwork</class>
		<properties>
			<!-- Configuring Cassandra properties -->
			<property name="kundera.nodes" value="localhost" />
			<property name="kundera.port" value="9160" />
			<property name="kundera.keyspace" value="RARE" />
			<property name="kundera.dialect" value="cassandra" />
			<property name="kundera.show.query" value="false" />
			<property name="kundera.client.lookup.class"
				value="com.impetus.client.cassandra.thrift.ThriftClientFactory" />
			<property name="kundera.ddl.auto.prepare" value="update" />
		</properties>
	</persistence-unit>
</persistence>
